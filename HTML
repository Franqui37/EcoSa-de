<body>
  <h1>EcoSaúde</h1>
  <p>Escolha um tema para aprender:</p>
  <ul id="temas">
    <li onclick="mostrarConteudo('descarte')">Descarte correto do lixo</li>
    <li onclick="mostrarConteudo('aguaEnergia')">Economia de água e energia</li>
    <li onclick="mostrarConteudo('prevencao')">Prevenção de doenças relacionadas ao meio ambiente</li>
  </ul>
  <div id="conteudo">
    <em>Selecione um tema acima para ver o conteúdo.</em>
  </div>

  <script>
    const conteudos = {
      descarte:
        'O descarte correto do lixo evita contaminação do solo e da água, preservando a saúde da comunidade.',
      aguaEnergia:
        'Economizar água e energia ajuda a preservar recursos naturais e reduzir impactos ambientais.',
      prevencao:
        'Praticar hábitos saudáveis e cuidar do ambiente diminui riscos de doenças transmitidas pela água e pelo ar.'
    };

    function mostrarConteudo(tema) {
      const divConteudo = document.getElementById('conteudo');
      divConteudo.textContent = conteudos[tema] || 'Conteúdo não disponível.';
    }
  </script>
